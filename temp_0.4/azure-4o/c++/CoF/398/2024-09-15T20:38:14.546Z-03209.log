#include <fstream>
#include <vector>
#include <queue>
#include <algorithm>
#include <tuple>

using namespace std;

const int dx[] = {0, 1, 0, -1};
const int dy[] = {1, 0, -1, 0};

void bfs(int x, int y, int n, int m, vector<vector<int>>& map, vector<vector<bool>>& visited, int landType) {
    queue<pair<int, int>> q;
    q.push({x, y});
    visited[x][y] = true;
    
    while (!q.empty()) {
        auto [cx, cy] = q.front();
        q.pop();
        
        for (int i = 0; i < 4; ++i) {
            int nx = cx + dx[i];
            int ny = cy + dy[i];
            
            if (nx >= 0 && nx < n && ny >= 0 && ny < m && !visited[nx][ny] && map[nx][ny] == landType) {
                visited[nx][ny] = true;
                q.push({nx, ny});
            }
        }
    }
}

int countIslands(int n, int m, vector<vector<int>>& map, int landType) {
    vector<vector<bool>> visited(n, vector<bool>(m, false));
    int count = 0;
    
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < m; ++j) {
            if (map[i][j] == landType && !visited[i][j]) {
                bfs(i, j, n, m, map, visited, landType);
                ++count;
            }
        }
    }
    
    return count;
}

int shortestBridge(int n, int m, vector<vector<int>>& map) {
    vector<vector<int>> dist(n, vector<int>(m, -1));
    queue<pair<int, int>> q;
    
    // Mark all R islands and push their water neighbors to the queue
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < m; ++j) {
            if (map[i][j] == 1) {
                for (int k = 0; k < 4; ++k) {
                    int ni = i + dx[k];
                    int nj = j + dy[k];
                    if (ni >= 0 && ni < n && nj >= 0 && nj < m && map[ni][nj] == 0) {
                        q.push({ni, nj});
                        dist[ni][nj] = 1;
                    }
                }
            }
        }
    }
    
    // BFS to find the shortest path to any G island
    while (!q.empty()) {
        auto [cx, cy] = q.front();
        q.pop();
        
        for (int i = 0; i < 4; ++i) {
            int nx = cx + dx[i];
            int ny = cy + dy[i];
            
            if (nx >= 0 && nx < n && ny >= 0 && ny < m) {
                if (map[nx][ny] == 2) {
                    return dist[cx][cy];
                }
                if (map[nx][ny] == 0 && dist[nx][ny] == -1) {
                    dist[nx][ny] = dist[cx][cy] + 1;
                    q.push({nx, ny});
                }
            }
        }
    }
    
    return -1;
}

int main() {
    ifstream fin("insule.in");
    ofstream fout("insule.out");
    
    int n, m;
    fin >> n >> m;
    
    vector<vector<int>> map(n, vector<int>(m));
    
    for (int i = 0; i < n; ++i) {
        string line;
        fin >> line;
        for (int j = 0; j < m; ++j) {
            map[i][j] = line[j] - '0';
        }
    }
    
    int NR = countIslands(n, m, map, 1);
    int NG = countIslands(n, m, map, 2);
    int NB = countIslands(n, m, map, 3);
    int Lg = shortestBridge(n, m, map);
    
    fout << NR << " " << NG << " " << NB << " " << Lg << endl;
    
    return 0;
}
```

### Explanation

1. **Reading the Input:**
   - The input is read from the file `insule.in`.
   - The first line contains `n` and `m`.
   - The next `n` lines contain the map of the archipelago.

2. **Counting Islands:**
   - The `countIslands` function uses BFS to count the number of islands of a specific land type (`1`, `2`, or `3`).

3. **Finding the Shortest Bridge:**
   - The `shortestBridge` function uses a BFS approach to find the shortest path from any island of type `1` (R) to any island of type `2` (G), traversing only water (`0`).

4. **Output the Results:**
   - The results are written to the file `insule.out` in the required format.

This solution ensures efficient execution by leveraging BFS for both island counting and shortest path finding, ensuring optimal performance for the given constraints.
