#include <fstream>
#include <vector>
#include <unordered_map>

using namespace std;

const int MAX_N = 100;

bool check_win(vector<vector<char>>& board, int N, int row, int col, char player) {
    // Check row
    bool win = true;
    for (int j = 0; j < N; ++j) {
        if (board[row][j] != player) {
            win = false;
            break;
        }
    }
    if (win) return true;

    // Check column
    win = true;
    for (int i = 0; i < N; ++i) {
        if (board[i][col] != player) {
            win = false;
            break;
        }
    }
    if (win) return true;

    // Check main diagonal
    if (row == col) {
        win = true;
        for (int i = 0; i < N; ++i) {
            if (board[i][i] != player) {
                win = false;
                break;
            }
        }
        if (win) return true;
    }

    // Check secondary diagonal
    if (row + col == N - 1) {
        win = true;
        for (int i = 0; i < N; ++i) {
            if (board[i][N - 1 - i] != player) {
                win = false;
                break;
            }
        }
        if (win) return true;
    }

    // Check main diagonal adjacent
    if (row == col + 1 || row == col - 1) {
        win = true;
        for (int i = 0; i < N; ++i) {
            if (i + 1 < N && board[i + 1][i] != player) {
                win = false;
                break;
            }
        }
        if (win) return true;

        win = true;
        for (int i = 0; i < N; ++i) {
            if (i - 1 >= 0 && board[i - 1][i] != player) {
                win = false;
                break;
            }
        }
        if (win) return true;
    }

    // Check secondary diagonal adjacent
    if (row + col == N || row + col == N - 2) {
        win = true;
        for (int i = 0; i < N; ++i) {
            if (i + 1 < N && board[i + 1][N - 1 - i] != player) {
                win = false;
                break;
            }
        }
        if (win) return true;

        win = true;
        for (int i = 0; i < N; ++i) {
            if (i - 1 >= 0 && board[i - 1][N - 1 - i] != player) {
                win = false;
                break;
            }
        }
        if (win) return true;
    }

    return false;
}

int main() {
    ifstream fin("joc.in");
    ofstream fout("joc.out");

    int C, N, K;
    fin >> C >> N >> K;

    vector<vector<int>> rounds(K, vector<int>(N * N));
    for (int i = 0; i < K; ++i) {
        for (int j = 0; j < N * N; ++j) {
            fin >> rounds[i][j];
        }
    }

    if (C == 1) {
        int teodora_wins = 0, stefan_wins = 0;
        for (int r = 0; r < K; ++r) {
            vector<vector<char>> board(N, vector<char>(N, '.'));
            char current_player = (r % 2 == 0) ? 'X' : '0';
            bool found_winner = false;
            for (int move = 0; move < N * N; ++move) {
                int cell = rounds[r][move] - 1;
                int row = cell / N;
                int col = cell % N;
                board[row][col] = current_player;
                if (check_win(board, N, row, col, current_player)) {
                    if (current_player == 'X') {
                        ++teodora_wins;
                    } else {
                        ++stefan_wins;
                    }
                    found_winner = true;
                    break;
                }
                current_player = (current_player == 'X') ? '0' : 'X';
            }
        }
        fout << teodora_wins << " " << stefan_wins << endl;
    } else if (C == 2) {
        int max_moves = 0;
        for (int r = 0; r < K; ++r) {
            vector<vector<char>> board(N, vector<char>(N, '.'));
            char current_player = (r % 2 == 0) ? 'X' : '0';
            for (int move = 0; move < N * N; ++move) {
                int cell = rounds[r][move] - 1;
                int row = cell / N;
                int col = cell % N;
                board[row][col] = current_player;
                if (check_win(board, N, row, col, current_player)) {
                    if (move + 1 > max_moves) {
                        max_moves = move + 1;
                    }
                    break;
                }
                current_player = (current_player == 'X') ? '0' : 'X';
            }
        }
        fout << max_moves << endl;
    }

    fin.close();
    fout.close();
    return 0;
}
