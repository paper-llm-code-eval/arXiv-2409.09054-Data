#include <fstream>
#include <vector>
#include <algorithm>

using namespace std;

bool check_winner(const vector<vector<char>>& board, int N, char player) {
    // Check rows and columns
    for (int i = 0; i < N; ++i) {
        if (count(board[i].begin(), board[i].end(), player) == N) return true;
        bool col_win = true;
        for (int j = 0; j < N; ++j) {
            if (board[j][i] != player) {
                col_win = false;
                break;
            }
        }
        if (col_win) return true;
    }

    // Check main diagonal and adjacent diagonals
    bool main_diag = true, adj_diag1 = true, adj_diag2 = true;
    for (int i = 0; i < N; ++i) {
        if (board[i][i] != player) main_diag = false;
        if (i > 0 && board[i][i-1] != player) adj_diag1 = false;
        if (i < N-1 && board[i][i+1] != player) adj_diag2 = false;
    }
    if (main_diag || adj_diag1 || adj_diag2) return true;

    // Check secondary diagonal and adjacent diagonals
    bool sec_diag = true, adj_diag3 = true, adj_diag4 = true;
    for (int i = 0; i < N; ++i) {
        if (board[i][N-i-1] != player) sec_diag = false;
        if (i > 0 && board[i][N-i] != player) adj_diag3 = false;
        if (i < N-1 && board[i][N-i-2] != player) adj_diag4 = false;
    }
    if (sec_diag || adj_diag3 || adj_diag4) return true;

    return false;
}

int main() {
    ifstream fin("joc.in");
    ofstream fout("joc.out");

    int C, N, K;
    fin >> C >> N >> K;

    vector<vector<int>> rounds(K, vector<int>(N * N));
    for (int i = 0; i < K; ++i) {
        for (int j = 0; j < N * N; ++j) {
            fin >> rounds[i][j];
        }
    }

    if (C == 1) {
        int t_wins = 0, s_wins = 0;
        for (int r = 0; r < K; ++r) {
            vector<vector<char>> board(N, vector<char>(N, '.'));
            bool teodora_turn = (r % 2 == 0);
            for (int i = 0; i < N * N; ++i) {
                int cell = rounds[r][i] - 1;
                int row = cell / N;
                int col = cell % N;
                board[row][col] = teodora_turn ? 'X' : '0';

                if (check_winner(board, N, teodora_turn ? 'X' : '0')) {
                    if (teodora_turn) {
                        ++t_wins;
                    } else {
                        ++s_wins;
                    }
                    break;
                }
                teodora_turn = !teodora_turn;
            }
        }
        fout << t_wins << " " << s_wins << endl;
    } else if (C == 2) {
        int max_marks = 0;
        for (int r = 0; r < K; ++r) {
            vector<vector<char>> board(N, vector<char>(N, '.'));
            bool teodora_turn = (r % 2 == 0);
            for (int i = 0; i < N * N; ++i) {
                int cell = rounds[r][i] - 1;
                int row = cell / N;
                int col = cell % N;
                board[row][col] = teodora_turn ? 'X' : '0';

                if (check_winner(board, N, teodora_turn ? 'X' : '0')) {
                    max_marks = max(max_marks, i + 1);
                    break;
                }
                teodora_turn = !teodora_turn;
            }
        }
        fout << max_marks << endl;
    }

    fin.close();
    fout.close();
    return 0;
}
```

This C++ program reads the input from `joc.in` and writes the output to `joc.out`. It handles both requirements: counting the number of rounds won by each player (Teodora and Ștefan) and determining the maximum number of moves made until a round is won. The program efficiently checks for winning conditions by examining rows, columns, and diagonals.
