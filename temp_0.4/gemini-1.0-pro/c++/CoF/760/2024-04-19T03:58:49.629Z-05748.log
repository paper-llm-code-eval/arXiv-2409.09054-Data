#include <fstream>
#include <vector>

using namespace std;

int main() {
  ifstream fin("telecabina.in");
  ofstream fout("telecabina.out");

  int n;
  fin >> n;
  vector<pair<int, int>> stations(n);
  for (auto& station : stations) { fin >> station.first >> station.second; }

  int people = 0, consumption = 0, special = 0;
  for (int i = 1; i < n; i++) {
    people += stations[i - 1].second;
    int diff = stations[i].first - stations[i - 1].first;
    consumption += 3 * diff;
    if (diff < 0) {
      consumption -= diff;
      special++;
    }
  }

  fout << people << endl << consumption << endl << special << endl;

  return 0;
}
```
