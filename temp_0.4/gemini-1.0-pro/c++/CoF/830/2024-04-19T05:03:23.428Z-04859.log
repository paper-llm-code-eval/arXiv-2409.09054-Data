#include <fstream>
#include <vector>

using namespace std;

int main() {
  ifstream fin("clepsidru.in");
  ofstream fout("clepsidru.out");

  int n, b;
  fin >> n >> b;
  int k;
  fin >> k;
  vector<pair<int, int>> states(k);
  for (int i = 0; i < k; i++) {
    fin >> states[i].first >> states[i].second;
  }

  int time = 0;
  int pos = 1;
  int sand = b;
  while (sand > 0) {
    time++;
    if (pos == n) {
      pos = 1;
    } else {
      pos++;
    }
    sand--;
  }
  fout << time << endl;

  sand = b;
  vector<int> top(n, 0);
  vector<int> bottom(n, 0);
  top[0] = sand;
  for (int i = 0; i < k; i++) {
    int s = states[i].first;
    int p = states[i].second;
    if (p == 1) {
      for (int j = 0; j < n; j++) {
        if (top[j] > 0) {
          int t = min(top[j], s);
          top[j] -= t;
          bottom[j] += t;
          s -= t;
        }
        if (s == 0) {
          break;
        }
      }
    } else {
      for (int j = n - 1; j >= 0; j--) {
        if (bottom[j] > 0) {
          int t = min(bottom[j], s);
          bottom[j] -= t;
          top[j] += t;
          s -= t;
        }
        if (s == 0) {
          break;
        }
      }
    }
  }
  for (int i = 0; i < n; i++) {
    fout << top[i] << " " << bottom[i] << endl;
  }

  return 0;
}
