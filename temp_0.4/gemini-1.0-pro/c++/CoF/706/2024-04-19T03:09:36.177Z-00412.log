#include <fstream>
#include <vector>

using namespace std;

int main() {
  ifstream fin("joc.in");
  ofstream fout("joc.out");

  int n;
  fin >> n;

  vector<int> v(n);
  for (int i = 0; i < n; i++) {
    fin >> v[i];
  }

  int sum = 0;
  int turn = 1;
  int i = 0;
  while (i < n) {
    if (turn == 1) {
      while (i < n && sum + v[i] <= sum + 1) {
        sum += v[i];
        i++;
      }
      turn = 2;
    } else {
      while (i < n && sum + v[i] <= sum + 1) {
        sum++;
        i++;
      }
      turn = 1;
    }
  }

  fout << sum << endl;

  return 0;
}
```
