import numpy as np

# Constants for the map representation
WATER, LAND_R, LAND_G, LAND_B = 0, 1, 2, 3

# Read the map from the input file
with open("insule.in", "r") as f:
    n, m = map(int, f.readline().split())
    map_data = np.array([list(map(int, line.strip())) for line in f], dtype=np.int32)

# A function to perform DFS to find islands
def find_islands(map_data, land_type):
    visited = np.zeros_like(map_data, dtype=bool)
    counter = 0

    def dfs(x, y):
        if not (0 <= x < n) or not (0 <= y < m) or visited[x, y] or map_data[x, y] != land_type:
            return
        visited[x, y] = True
        for dx, dy in ((0, 1), (1, 0), (0, -1), (-1, 0)):
            dfs(x + dx, y + dy)

    for i in range(n):
        for j in range(m):
            if map_data[i, j] == land_type and not visited[i, j]:
                counter += 1
                dfs(i, j)
    
    return counter

# Count islands for each land type
num_islands_R = find_islands(map_data, LAND_R)
num_islands_G = find_islands(map_data, LAND_G)
num_islands_B = find_islands(map_data, LAND_B)

# A function to find the minimum bridge length
def find_bridge(map_data):
    dist = np.full((n, m), np.inf)
    q = []

    for i in range(n):
        for j in range(m):
            if map_data[i, j] == LAND_R:
                for dx, dy in ((0, 1), (1, 0), (0, -1), (-1, 0)):
                    if 0 <= i+dx < n and 0 <= j+dy < m and map_data[i+dx, j+dy] == WATER:
                        dist[i+dx, j+dy] = 1
                        q.append((i+dx, j+dy))

    while q:
        x, y = q.pop(0)
        if map_data[x, y] == LAND_G:
            return int(dist[x, y])
        for dx, dy in ((0, 1), (1, 0), (0, -1), (-1, 0)):
            nx, ny = x + dx, y + dy
            if 0 <= nx < n and 0 <= ny < m and map_data[nx, ny] == WATER and dist[nx, ny] > dist[x, y] + 1:
                dist[nx, ny] = dist[x, y] + 1
                q.append((nx, ny))

    return int(np.inf)

# Find the minimum bridge length between R and G
min_bridge_len = find_bridge(map_data)

# Write the counts and minimum bridge length to the output file
with open("insule.out", "w") as f:
    f.write(f"{num_islands_R} {num_islands_G} {num_islands_B} {min_bridge_len}\n")
