import numpy as np
from scipy.sparse.csgraph import shortest_path
from scipy.sparse import csr_matrix

# Reading input file
with open("insule.in", "r") as file:
    n, m = map(int, file.readline().split())
    matrix = np.array([list(map(int, list(file.readline().strip()))) for _ in range(n)])

# Identifying islands using DFS
def dfs(i, j, value):
    if not (0 <= i < n and 0 <= j < m) or visited[i, j] or matrix[i, j] != value:
        return 0
    visited[i, j] = True
    return (1 + dfs(i+1, j, value) + dfs(i-1, j, value) +
            dfs(i, j+1, value) + dfs(i, j-1, value))

visited = np.zeros_like(matrix, dtype=bool)
islands = [0, 0, 0]
for i in range(n):
    for j in range(m):
        if not visited[i, j] and matrix[i, j] in [1, 2, 3]:
            islands[matrix[i, j] - 1] += 1
            dfs(i, j, matrix[i, j])

# Building graph for BFS to find the shortest bridge
INF = n * m + 1
graph = np.full((n*m, n*m), INF, dtype=int)
directions = [(1, 0), (-1, 0), (0, 1), (0, -1)]
for i in range(n):
    for j in range(m):
        if matrix[i, j] == 0:
            for di, dj in directions:
                ni, nj = i + di, j + dj
                if 0 <= ni < n and 0 <= nj < m and matrix[ni, nj] == 0:
                    graph[i*m+j, ni*m+nj] = 1

# Finding shores of R and G
shores = {1: [], 2: []}
for i in range(n):
    for j in range(m):
        if matrix[i, j] in [1, 2]:
            for di, dj in directions:
                ni, nj = i + di, j + dj
                if 0 <= ni < n and 0 <= nj < m and matrix[ni, nj] == 0:
                    shores[matrix[i, j]].append(i*m + j)

# Finding the shortest path between any shore of R and G
min_bridge_length = INF
for source in shores[1]:
    for target in shores[2]:
        min_bridge_length = min(min_bridge_length, graph[source, target])

# If the bridge is zero-length, no need to build it
min_bridge_length = 0 if min_bridge_length == INF else min_bridge_length

# Writing output file
with open("insule.out", "w") as file:
    file.write(f"{islands[0]} {islands[1]} {islands[2]} {min_bridge_length}\n")
```
