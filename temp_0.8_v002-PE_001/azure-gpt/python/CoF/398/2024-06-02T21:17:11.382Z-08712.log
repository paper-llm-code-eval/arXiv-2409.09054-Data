import numpy as np
from collections import deque
from scipy.ndimage import label

def adjacency_list(mat):
    adj = {}
    for i in range(mat.shape[0]):
        for j in range(mat.shape[1]):
            neighbors = []
            if i > 0 and mat[i - 1, j] == mat[i, j]:
                neighbors.append(((i - 1) * m + j))
            if i < n - 1 and mat[i + 1, j] == mat[i, j]:
                neighbors.append(((i + 1) * m + j))
            if j > 0 and mat[i, j - 1] == mat[i, j]:
                neighbors.append((i * m + (j - 1)))
            if j < m - 1 and mat[i, j + 1] == mat[i, j]:
                neighbors.append((i * m + (j + 1)))
            if neighbors:
                adj[i * m + j] = neighbors
    return adj

def bfs(start, adj, visited, target):
    queue = deque([start])
    visited.add(start)
    distance = 0
    while queue:
        for _ in range(len(queue)):
            current = queue.popleft()
            if current in target:
                return distance
            for neighbor in adj.get(current, []):
                if neighbor not in visited:
                    visited.add(neighbor)
                    queue.append(neighbor)
        distance += 1
    return float('inf')

def read_input(file_path):
    with open(file_path, 'r') as file:
        n, m = map(int, file.readline().split())
        data = np.array([list(map(int, list(file.readline().strip()))) for _ in range(n)])
    return n, m, data

def write_output(file_path, NR, NG, NB, Lg):
    with open(file_path, 'w') as file:
        file.write(f"{NR} {NG} {NB} {Lg}\n")

# Read input
n, m, map_data = read_input('insule.in')

# Label the islands
R_labeled, NR = label(map_data == 1)
G_labeled, NG = label(map_data == 2)
B_labeled, NB = label(map_data == 3)

# Determine adjacency lists
adj_water = adjacency_list(map_data == 0)
adj_R = adjacency_list(map_data == 1)
adj_G = adjacency_list(map_data == 2)

# Find all water cells next to land R and land G
water_next_to_R = set(water for land in adj_R for water in adj_water.get(land, []))
water_next_to_G = set(water for land in adj_G for water in adj_water.get(land, []))

# Find the shortest bridge length using BFS
Lg = float('inf')
visited = set()
for water in water_next_to_R:
    if water not in visited:
        Lg = min(Lg, bfs(water, adj_water, visited, water_next_to_G))

# Write output
write_output('insule.out', NR, NG, NB, Lg)
