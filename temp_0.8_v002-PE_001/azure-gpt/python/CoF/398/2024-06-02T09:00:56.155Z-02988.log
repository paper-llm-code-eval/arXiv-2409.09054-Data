import numpy as np
from collections import deque
from scipy.ndimage import label

# Read input
with open('insule.in', 'r') as file:
    n, m = map(int, file.readline().split())
    grid = np.array([list(map(int, list(file.readline().strip()))) for _ in range(n)])

# Define the directions (up, down, left, right)
directions = [(0, 1), (0, -1), (1, 0), (-1, 0)]

def bfs_water(start, target_value):
    visited = set()
    queue = deque([start])
    min_length = float('inf')
    while queue:
        x, y, length = queue.popleft()
        if grid[x, y] == target_value:
            min_length = min(min_length, length)
            continue
        visited.add((x, y))
        for dx, dy in directions:
            nx, ny = x + dx, y + dy
            if 0 <= nx < n and 0 <= ny < m and grid[nx, ny] == 0 and (nx, ny) not in visited:
                queue.append((nx, ny, length + 1))
    return min_length

# Find the number of islands for each country
_, num_islands_R = label(grid == 1, structure=np.ones((3, 3)))
_, num_islands_G = label(grid == 2, structure=np.ones((3, 3)))
_, num_islands_B = label(grid == 3, structure=np.ones((3, 3)))

# Find the shortest bridge
bridge_length = float('inf')
for i in range(n):
    for j in range(m):
        if grid[i, j] == 1:
            for dx, dy in directions:
                nx, ny = i + dx, j + dy
                if 0 <= nx < n and 0 <= ny < m and grid[nx, ny] == 0:
                    bridge_length = min(bridge_length, bfs_water((nx, ny, 1), 2))

# Write output
with open('insule.out', 'w') as file:
    file.write(f'{num_islands_R} {num_islands_G} {num_islands_B} {bridge_length if bridge_length != float("inf") else 0}\n')
```
