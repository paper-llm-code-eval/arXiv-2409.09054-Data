import numpy as np
from scipy.ndimage import label

# Function to perform BFS and find the shortest bridge length
def bfs_shortest_bridge(matrix, n, m, land1, land2):
    visited = np.full((n, m), False, dtype=bool)
    q = []

    # Starting points are the edges of land1
    for i in range(n):
        for j in range(m):
            if matrix[i, j] == land1:
                for di, dj in [(-1, 0), (1, 0), (0, -1), (0, 1)]:
                    ni, nj = i + di, j + dj
                    if 0 <= ni < n and 0 <= nj < m and matrix[ni, nj] == 0:
                        q.append((ni, nj, 1))
                        visited[ni, nj] = True

    # BFS to find the shortest path to land2
    while q:
        i, j, length = q.pop(0)
        if matrix[i, j] == land2:
            return length - 1  # Subtract one because we start from the water
        for di, dj in [(-1, 0), (1, 0), (0, -1), (0, 1)]:
            ni, nj = i + di, j + dj
            if 0 <= ni < n and 0 <= nj < m and not visited[ni, nj] and matrix[ni, nj] != land1:
                visited[ni, nj] = True
                q.append((ni, nj, length + 1))
    return np.inf  # Return infinity if no bridge is possible

# Read input
with open('insule.in', 'r') as file:
    n, m = map(int, file.readline().split())
    matrix = np.array([list(map(int, file.readline().strip())) for _ in range(n)])

# Find the number of islands for each country (1, 2, 3)
struct = np.array([[1, 1, 1],
                   [1, 1, 1],
                   [1, 1, 1]])
islands_R = label(matrix == 1, structure=struct)[1]
islands_G = label(matrix == 2, structure=struct)[1]
islands_B = label(matrix == 3, structure=struct)[1]

# Find the shortest bridge length between an R island and a G island
shortest_bridge = int(bfs_shortest_bridge(matrix, n, m, 1, 2))

# Write output
with open('insule.out', 'w') as file:
    file.write(f'{islands_R} {islands_G} {islands_B} {shortest_bridge}\n')
