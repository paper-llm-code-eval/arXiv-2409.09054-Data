import numpy as np

def read_input(filename):
    with open(filename, 'r') as file:
        n = int(file.readline().strip())
        points = np.array([list(map(int, line.split())) for line in file], dtype=int)
    return n, points[:,:2], points[:,2]

def calculate_area(points):
    # Calculate area using the Shoelace formula
    x = points[:, 0]
    y = points[:, 1]
    return 0.5 * np.abs(np.dot(x, np.roll(y, 1)) - np.dot(y, np.roll(x, 1)))

def maximize_area(n, positions, distances):
    # Find the convex hull
    hull_indices = ConvexHull(positions).vertices
    hull_positions = positions[hull_indices]

    # Move each hull vertex out by its distance
    for i, vertex in enumerate(hull_positions):
        angle = np.arctan2(vertex[1], vertex[0])
        delta_x = distances[hull_indices[i]] * np.cos(angle)
        delta_y = distances[hull_indices[i]] * np.sin(angle)
        hull_positions[i][0] += delta_x
        hull_positions[i][1] += delta_y

    # Calculate the new area
    return calculate_area(hull_positions)

def write_output(filename, area):
    with open(filename, 'w') as file:
        file.write(f"{area:.4f}\n")

def main():
    n, positions, distances = read_input('mosia.in')
    area = maximize_area(n, positions, distances)
    write_output('mosia.out', area)

if __name__ == "__main__":
    main()
```

