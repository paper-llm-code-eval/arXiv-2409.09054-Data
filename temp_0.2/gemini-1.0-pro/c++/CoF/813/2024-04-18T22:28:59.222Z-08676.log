#include <fstream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
  ifstream in("adunscad.in");
  ofstream out("adunscad.out");
  int n, m;
  in >> n >> m;
  vector<int> v(m);
  for (int i = 0; i < m; i++) {
    in >> v[i];
  }
  sort(v.begin(), v.end());
  int sum = 0;
  for (int i = 0; i < m; i++) {
    sum += v[i];
  }
  if (sum < n || (sum - n) % 2 == 1) {
    out << 0;
    return 0;
  }
  int diff = (sum - n) / 2;
  int sum1 = 0;
  string expr = "";
  for (int i = 0; i < m; i++) {
    if (sum1 + v[i] <= diff) {
      sum1 += v[i];
      expr += '+';
      expr += to_string(v[i]);
    } else {
      expr += '-';
      expr += to_string(v[i]);
    }
  }
  expr.erase(0, 1);
  out << expr;
  return 0;
}
