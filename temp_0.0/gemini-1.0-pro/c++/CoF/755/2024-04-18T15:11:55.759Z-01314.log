#include <fstream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
    ifstream in("elfi.in");
    ofstream out("elfi.out");

    int n;
    in >> n;

    vector<pair<int, int>> spiridusi(n);
    for (int i = 0; i < n; i++) {
        in >> spiridusi[i].first >> spiridusi[i].second;
    }

    sort(spiridusi.begin(), spiridusi.end());

    int max_time = 0;
    int num_robinete = 0;
    int current_time = 0;

    for (int i = 0; i < n; i++) {
        if (current_time <= spiridusi[i].first) {
            current_time = spiridusi[i].first + 1;
            num_robinete++;
        }
        current_time += spiridusi[i].second;
        max_time = max(max_time, current_time);
    }

    out << num_robinete << endl;

    return 0;
}
```
