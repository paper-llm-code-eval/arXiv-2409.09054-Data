#include <fstream>
#include <vector>

using namespace std;

ifstream fin("expozitie.in");
ofstream fout("expozitie.out");

const int MOD = 1e9 + 7;

int n, d, k;
vector<int> dp;

int main() {
    fin >> n >> d >> k;
    dp.resize(n + 1, 0);
    dp[0] = 1;
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= d; j++) {
            if (i - j >= 0) {
                dp[i] = (dp[i] + dp[i - j]) % MOD;
            }
        }
        if (i >= k) {
            dp[i] = (dp[i] - dp[i - k] + MOD) % MOD;
        }
    }
    fout << dp[n] << '\n';
    return 0;
}
```
