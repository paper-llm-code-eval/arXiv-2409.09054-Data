Here are all the necessary steps to solve the challenge:```c++
#include <fstream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
    ifstream in("telecabina.in");
    ofstream out("telecabina.out");

    int n;
    in >> n;
    vector<pair<int, int>> stations(n);
    for (int i = 0; i < n; i++) {
        int altitude, people;
        in >> altitude >> people;
        stations[i] = {altitude, people};
    }
    sort(stations.begin(), stations.end());

    int people_to_city = 0;
    int fuel_consumption = 0;
    int special_stations = 0;
    bool is_climbing = true;
    for (int i = 0; i < n; i++) {
        int altitude = stations[i].first;
        int people = stations[i].second;
        if (is_climbing) {
            fuel_consumption += 3 * (altitude - stations[i - 1].first);
        } else {
            fuel_consumption += 1 * (altitude - stations[i - 1].first);
        }
        people_to_city += people;
        if (stations[i].first < stations[i - 1].first) {
            is_climbing = false;
            special_stations++;
        } else if (stations[i].first > stations[i - 1].first) {
            is_climbing = true;
            special_stations++;
        }
    }

    out << people_to_city << endl;
    out << fuel_consumption << endl;
    out << special_stations << endl;

    return 0;
}
```
