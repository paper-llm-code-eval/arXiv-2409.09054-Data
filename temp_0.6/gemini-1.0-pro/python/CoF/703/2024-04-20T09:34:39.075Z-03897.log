with open("valori-panta.in", "r") as f:
    n = int(f.readline())
    a = list(map(int, f.readline().split()))

a = [str(x) for x in a]
ok = 0
maxi = -1
poz_maxi = []
mini = 1000000000
poz_mini = []
for i in range(n):
    ok_cresc = True
    ok_descr = True
    for j in range(len(a[i]) - 1):
        if a[i][j] > a[i][j + 1]:
            ok_cresc = False
        if a[i][j] < a[i][j + 1]:
            ok_descr = False
    if ok_cresc or ok_descr:
        ok += 1
        x = int(a[i])
        if x > maxi:
            maxi = x
            poz_maxi = [i + 1]
        elif x == maxi:
            poz_maxi.append(i + 1)
        if x < mini:
            mini = x
            poz_mini = [i + 1]
        elif x == mini:
            poz_mini.append(i + 1)

with open("valori-panta.out", "w") as f:
    f.write(str(ok) + "\n")
    if ok > 0:
        f.write(str(maxi) + " " + " ".join(map(str, poz_maxi)) + "\n")
        f.write(str(mini) + " " + " ".join(map(str, poz_mini)) + "\n")
    else:
        f.write("NU EXISTA\n")
```
