#include <fstream>
#include <vector>
#include <unordered_map>

std::vector<std::string> words;
std::unordered_map<char, std::vector<int>> start_map;
std::unordered_map<char, std::vector<int>> end_map;
std::unordered_map<int, int> dp;

// Read words from the file and populate start_map and end_map
void read_words(std::ifstream &fin) {
    std::string word;
    while (fin >> word) {
        char start = word.front();
        char end = word.back();
        words.push_back(word);
        int index = words.size() - 1;
        start_map[start].push_back(index);
        end_map[end].push_back(index);
    }
}

// Recursive function to find the longest chain of words following the rule
int longest_chain(int index) {
    if (dp.count(index)) return dp[index];
    int max_length = 1; // The word itself
    char last_char = words[index].back();
    if (start_map.count(last_char)) {
        for (int next_index : start_map[last_char]) {
            if (next_index > index) { // Ensure we are moving forward
                max_length = std::max(max_length, 1 + longest_chain(next_index));
            }
        }
    }
    return dp[index] = max_length;
}

// Write to output file
void write_output(std::ofstream &fout, int min_eliminations, int total_words) {
    fout << min_eliminations << "\n" << total_words << "\n";
    int index = 0;
    for (int i = 0; i < words.size(); ++i) {
        if (longest_chain(i) == total_words - min_eliminations) {
            index = i;
            break;
        }
    }
    while (index < words.size()) {
        fout << words[index] << "\n";
        char last_char = words[index].back();
        total_words = dp[index] - 1; // Remaining words in the chain
        index = -1;
        for (int next_index : start_map[last_char]) {
            if (next_index > index && longest_chain(next_index) == total_words) {
                index = next_index;
                break;
            }
        }
    }
}

int main() {
    std::ifstream fin("text.in");
    std::ofstream fout("text.out");
    read_words(fin);
    int total_words = words.size();
    int max_chain_length = 0;

    // Find the max chain length starting from each word
    for (int i = 0; i < words.size(); ++i) {
        max_chain_length = std::max(max_chain_length, longest_chain(i));
    }

    // Calculate the number of words to eliminate
    int min_eliminations = total_words - max_chain_length;

    // Output results
    write_output(fout, min_eliminations, total_words);

    fin.close();
    fout.close();

    return 0;
}
