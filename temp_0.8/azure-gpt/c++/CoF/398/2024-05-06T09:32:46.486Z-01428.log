```cpp
#include <fstream>
#include <queue>
#include <vector>

using namespace std;

const int dx[] = {-1, 1, 0, 0};
const int dy[] = {0, 0, -1, 1};
const int MAX = 100;

int n, m;
int map[MAX][MAX];
bool visited[MAX][MAX];

void fill(int x, int y, int value) {
    if (x < 0 || x >= n || y < 0 || y >= m || map[x][y] != value || visited[x][y]) return;
    visited[x][y] = true;
    for (int d = 0; d < 4; ++d) {
        fill(x + dx[d], y + dy[d], value);
    }
}

int bfs(int startX, int startY, int targetValue) {
    queue<pair<int, pair<int, int>>> q; // {distance, {x, y}}
    q.push({0, {startX, startY}});
    visited[startX][startY] = true;

    while (!q.empty()) {
        int distance = q.front().first;
        int x = q.front().second.first;
        int y = q.front().second.second;
        q.pop();

        if (map[x][y] == targetValue) return distance;

        for (int d = 0; d < 4; ++d) {
            int newX = x + dx[d];
            int newY = y + dy[d];

            if (newX >= 0 && newX < n && newY >= 0 && newY < m && !visited[newX][newY] && map[newX][newY] != 3) {
                visited[newX][newY] = true;
                q.push({distance + 1, {newX, newY}});
            }
        }
    }

    return MAX * MAX;
}

int main() {
    ifstream fin("insule.in");
    ofstream fout("insule.out");

    fin >> n >> m;

    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < m; ++j) {
            char ch;
            fin >> ch;
            map[i][j] = ch - '0';
        }
    }

    int nrR = 0, nrG = 0, nrB = 0, minBridgeLength = MAX * MAX;

    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < m; ++j) {
            if (!visited[i][j]) {
                if (map[i][j] == 1) {
                    nrR++;
                    fill(i, j, 1);
                } else if (map[i][j] == 2) {
                    nrG++;
                    fill(i, j, 2);
                } else if (map[i][j] == 3) {
                    nrB++;
                    fill(i, j, 3);
                }
            }
        }
    }

    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < m; ++j) {
            if (map[i][j] == 0) {
                for (int d = 0; d < 4; ++d) {
                    int ni = i + dx[d], nj = j + dy[d];
                    if (ni >= 0 && ni < n && nj >= 0 && nj < m && map[ni][nj] == 1) {
                        fill(i, j, 0);
                        minBridgeLength = min(minBridgeLength, bfs(i, j, 2));
                        break;
                    }
                }
            }
        }
    }

    fout << nrR << " " << nrG << " " << nrB << " " << minBridgeLength << "\n";
    fin.close();
    fout.close();

    return 0;
}
```

This code performs a BFS (Breadth-First Search) to find the minimum length of the bridge between islands of countries R and G, after counting the number of different islands for each country using a flood-fill algorithm.
