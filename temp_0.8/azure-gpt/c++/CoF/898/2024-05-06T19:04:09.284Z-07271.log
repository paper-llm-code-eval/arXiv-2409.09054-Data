#include <fstream>
#include <vector>

int main() {
    std::ifstream fin("cruce.in");
    std::ofstream fout("cruce.out");

    int N, K;
    fin >> N >> K;
    
    std::vector<std::vector<int>> matrix(N, std::vector<int>(N));
    std::vector<int> rowSum(N), colSum(N);

    for (int i = 0; i < N; ++i) {
        for (int j = 0; j < N; ++j) {
            fin >> matrix[i][j];
            if (i < K) rowSum[j] += matrix[i][j];
            if (j < K) colSum[i] += matrix[i][j];
        }
    }

    int Vmax = 0, L = 1, C = 1, crossSum, tmpSum;

    for (int i = 0; i < N - K + 1; ++i) {
        crossSum = 0;
        for (int j = 0; j < K; ++j) {
            crossSum += rowSum[j];
        }
        for (int j = 0; j < K - 1; ++j) {
            crossSum += colSum[j];
        }

        if (crossSum > Vmax) {
            Vmax = crossSum;
            L = i + 1;
            C = 1;
        }

        for (int j = 1; j < N - K + 1; ++j) {
            tmpSum = crossSum - colSum[i] + colSum[i + K - 1];
            for (int x = 0; x < K; ++x) {
                tmpSum = tmpSum - matrix[i + x][j - 1] + matrix[i + x][j + K - 1];
            }
            if (tmpSum > Vmax) {
                Vmax = tmpSum;
                L = i + 1;
                C = j + 1;
            }
            crossSum = tmpSum;
        }

        for (int j = 0; j < N; ++j) {
            if (i + K < N) {
                if (j < K) colSum[i + K] += matrix[i + K][j];
                colSum[i] -= matrix[i][j];
                if (j >= K) colSum[i + K - 1] -= matrix[i][j];
            }
            if (j < K && i + K < N) rowSum[j] += matrix[i + K][j] - matrix[i][j];
        }
    }

    fout << Vmax << ' ' << L << ' ' << C;
    fin.close();
    fout.close();

    return 0;
}
