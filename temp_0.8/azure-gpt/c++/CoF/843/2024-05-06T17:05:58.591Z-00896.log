#include <fstream>
#include <vector>
#include <bitset>

int main() {
    std::ifstream in("piramide.in");
    std::ofstream out("piramide.out");

    int N, X, K;
    in >> N >> X >> K;

    std::bitset<100001> whiteCards;
    int card;
    for (int i = 0; i < K; ++i) {
        in >> card;
        whiteCards.set(card);
    }

    int totalCardsUsed = 0, layerSize = 1, nextLayerStart = 1, pyramidCount = 0;
    while (nextLayerStart <= N) {
        int cardsInPyramid = layerSize * (layerSize + 1) / 2;
        if (nextLayerStart + cardsInPyramid - 1 > N) break;
        totalCardsUsed += cardsInPyramid;
        nextLayerStart += cardsInPyramid;
        ++pyramidCount;
        ++layerSize;
    }

    int unusedCards = N - totalCardsUsed;
    int pyramidWithX = 0, maxWhiteCardsPyramid = 0, maxWhiteCount = 0;
    layerSize = 1;
    nextLayerStart = 1;
    int whiteCount = 0;

    for (int i = 1; i <= pyramidCount; ++i) {
        int cardsInPyramid = layerSize * (layerSize + 1) / 2;
        whiteCount = 0;

        for (int j = nextLayerStart; j < nextLayerStart + cardsInPyramid; ++j) {
            if (whiteCards[j]) {
                ++whiteCount;
            }
            if (j == X) {
                pyramidWithX = i;
            }
        }

        if (whiteCount > maxWhiteCount) {
            maxWhiteCount = whiteCount;
            maxWhiteCardsPyramid = i;
        }

        nextLayerStart += cardsInPyramid;
        ++layerSize;
    }

    out << pyramidWithX << '\n';
    out << pyramidCount << '\n';
    out << unusedCards << '\n';
    out << maxWhiteCardsPyramid << std::endl;

    return 0;
}
```
