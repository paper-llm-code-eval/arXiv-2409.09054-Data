#include <fstream>
#include <vector>
#include <algorithm>

int main() {
    std::ifstream in("pic.in");
    std::ofstream out("pic.out");

    int V, N;
    in >> V >> N;

    int M = N * (N + 1) / 2;
    std::vector<int> C(M);
    for (int i = 0; i < M; ++i) in >> C[i];
    
    if (V == 1) {
        // Task V=1: Find the level with the maximum sum of capacities.
        int level = 1, max_sum = 0, sum = 0, max_level = 1;
        for (int i = 0, j = 0; i < M; i += level, ++level, sum = 0) {
            for (j = 0; j < level; ++j) sum += C[i + j];
            if (sum > max_sum) {
                max_sum = sum;
                max_level = level;
            }
        }
        out << max_level << std::endl;
    } else {
        // Task V=2: Find the minimum time to fill all glasses and the water wasted.
        std::vector<int> water(M, 0);
        int seconds = 0, wasted = 0, idx = 0;
        bool done = false;
    
        while (!done) {
            idx = 0;
            ++seconds;
            while (idx < M && water[idx] >= C[idx]) {
                if (idx >= M - N) {
                    // Base level glass is full, waste water.
                    ++wasted;
                } else {
                    // Full glass, spill water to left and right glasses below.
                    water[idx + (idx - (idx * (idx + 1) / 2 - N))]++;
                    idx++;
                    water[idx + (idx - (idx * (idx + 1) / 2 - N))]++;
                }
                idx++;
            }
            if (idx < M) water[idx] += 1;  // Add water to the next non-full glass.
    
            // Check if all glasses are full.
            done = true;
            for (int i = 0; i < M && done; ++i) if (water[i] < C[i]) done = false;
        }
        out << seconds << " " << wasted << std::endl;
    }
    
    in.close();
    out.close();
    return 0;
}
