#include <fstream>
#include <vector>
#include <algorithm>

int main() {
    std::ifstream fin("elfi.in");
    std::ofstream fout("elfi.out");

    int n;
    fin >> n;

    std::vector<int> times;
    int c, p, total_time;
    for (int i = 0; i < n; ++i) {
        fin >> c >> p;
        total_time = c + p + c;
        for (int time = total_time; time <= 14400; time += total_time + 1) {
            times.push_back(time);
        }
    }

    std::sort(times.begin(), times.end());

    int max_faucets = 0, current_faucets = 0, current_time = 0;

    for (int time : times) {
        while (!times.empty() && times.front() <= current_time) {
            current_faucets--;
            times.erase(times.begin());
        }
        current_faucets++;
        max_faucets = std::max(max_faucets, current_faucets);
        current_time = time;
    }

    fout << max_faucets << '\n';

    fin.close();
    fout.close();

    return 0;
}
```
