```python
def max_black_squares(matrix, N, M):
    max_count = 0
    for i in range(N):
        count = 0
        for j in range(M):
            if matrix[i][j] == 0:
                count += 1
                max_count = max(max_count, count)
            else:
                count = 0
    return max_count

def lightning_stats(matrix, N, M):
    visited = [[False] * M for _ in range(N)]
    max_height = 0
    lightning_count = 0

    def dfs(r, c, height):
        if r < 0 or r >= N or c < 0 or c >= M or matrix[r][c] == 0 or visited[r][c]:
            return height
        visited[r][c] = True
        current_height = height + 1
        return max(dfs(r+1, c-1, current_height), dfs(r+1, c, current_height), dfs(r+1, c+1, current_height))

    for i in range(N):
        for j in range(M):
            if matrix[i][j] == 1 and not visited[i][j]:
                height = dfs(i, j, 0)
                max_height = max(max_height, height)
                lightning_count += 1

    return lightning_count, max_height

with open('foto.in', 'r') as file:
    lines = file.readlines()

C = int(lines[0])
N, M = map(int, lines[1].split())
matrix = [list(map(int, line.split())) for line in lines[2:]]

if C == 1:
    result = max_black_squares(matrix, N, M)
elif C == 2:
    result = lightning_stats(matrix, N, M)

with open('foto.out', 'w') as file:
    if C == 1:
        file.write(str(result) + '\n')
    elif C == 2:
        file.write(f"{result[0]} {result[1]}\n")
