def count_max_black_squares(matrix, n, m):
    max_count = 0
    for row in matrix:
        count = 0
        for value in row:
            if value == 0:
                count += 1
                max_count = max(max_count, count)
            else:
                count = 0
    return max_count

def find_lightnings(matrix, n, m):
    visited = [[False] * m for _ in range(n)]
    num_lightnings = 0
    max_height = 0

    def dfs(i, j, height):
        nonlocal max_height
        if i < 0 or i >= n or j < 0 or j >= m or visited[i][j] or matrix[i][j] == 0:
            return height
        visited[i][j] = True
        height += 1
        max_height = max(max_height, height)
        for ni, nj in ((i + 1, j), (i - 1, j), (i, j - 1), (i, j + 1)):
            height = max(height, dfs(ni, nj, height))
        return height

    for i in range(n):
        for j in range(m):
            if matrix[i][j] == 1 and not visited[i][j]:
                num_lightnings += 1
                dfs(i, j, 0)

    return num_lightnings, max_height

with open('foto.in', 'r') as fin:
    c = int(fin.readline())
    n, m = map(int, fin.readline().split())
    matrix = [list(map(int, fin.readline().split())) for _ in range(n)]

if c == 1:
    result = count_max_black_squares(matrix, n, m)
elif c == 2:
    result = find_lightnings(matrix, n, m)

with open('foto.out', 'w') as fout:
    if isinstance(result, tuple):
        fout.write(f'{result[0]} {result[1]}')
    else:
        fout.write(str(result))
```

