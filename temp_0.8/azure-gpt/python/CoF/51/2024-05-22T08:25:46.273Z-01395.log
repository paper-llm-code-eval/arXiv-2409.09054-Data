import re
from collections import defaultdict

# Define a function to calculate the similarity between two words.
def similarity(w1, w2):
    if len(w1) > len(w2):
        w1, w2 = w2, w1
    previous_row = range(len(w1) + 1)
    for i, c2 in enumerate(w2):
        current_row = [i + 1]
        for j, c1 in enumerate(w1):
            insertions = previous_row[j + 1] + 1
            deletions = current_row[j] + 1
            substitutions = previous_row[j] + (c1 != c2)
            current_row.append(min(insertions, deletions, substitutions))
        previous_row = current_row
    return previous_row[-1]

# Read the input data from the file 'lant.in'.
with open('lant.in', 'r') as file:
    k = int(file.readline().strip())
    text = file.read().lower()

# Remove punctuation and split the text into a list of words.
words = re.findall(r'\b\w+\b', text)

# Calculate the similarity between each pair of words and store it if it is less than or equal to k.
graph = defaultdict(set)
for i in range(len(words)):
    for j in range(i + 1, len(words)):
        if similarity(words[i], words[j]) <= k:
            graph[i].add(j)

# Perform a modified DFS to find all chains starting with the first word (c_0).
def dfs(graph, current, visited):
    chains = 0
    visited.add(current)
    for neighbor in graph[current]:
        if neighbor not in visited:
            chains += dfs(graph, neighbor, visited)
    visited.remove(current)
    return chains + 1

# Initialize the visited set and start the DFS with the first word.
visited = set()
chain_count = dfs(graph, 0, visited) - 1  # Subtract 1 because the single word is not a chain.

# Write the output data to the file 'lant.out'.
with open('lant.out', 'w') as file:
    file.write(str(chain_count))
