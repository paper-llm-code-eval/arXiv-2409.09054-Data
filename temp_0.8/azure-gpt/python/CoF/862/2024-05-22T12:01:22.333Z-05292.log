# Read input from charlie.in
with open('charlie.in', 'r') as file:
    p = int(file.readline().strip())
    string = file.readline().strip()

# Function to calculate the value of a character
def f(char):
    return ord(char) - ord('a') + 1

# Solve for p = 1
if p == 1:
    max_len = 1
    count = 1
    for i in range(1, len(string)):
        if (string[i] > string[i - 1]) == (count % 2 == 0):
            count += 1
            max_len = max(max_len, count)
        else:
            count = 1
    with open('charlie.out', 'w') as file:
        file.write(str(max_len) + '\n')

# Solve for p = 2
elif p == 2:
    stack = []
    sum_cost = 0

    for i in range(len(string)):
        while (len(stack) > 1 and
               stack[-1] < string[i] and
               stack[-2] > stack[-1]):
            sum_cost += max(f(stack[-2]), f(string[i]))
            stack.pop()
        stack.append(string[i])

    final_string = ''.join(stack)

    with open('charlie.out', 'w') as file:
        file.write(final_string + '\n')
        file.write(str(sum_cost) + '\n')
