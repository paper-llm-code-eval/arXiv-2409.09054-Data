```python
# Read input from charlie.in
with open('charlie.in', 'r') as file:
    p = int(file.readline().strip())
    string = file.readline().strip()

# Solve for p = 1
if p == 1:
    max_len = 1
    count = 1
    for i in range(1, len(string)):
        # Check if the current character is opposite in comparison to the previous
        # (i.e., increasing if count is odd, decreasing if count is even)
        if (string[i] > string[i - 1]) == (count % 2 == 1):
            count += 1
            max_len = max(max_len, count)
        else:
            count = 1
    # Write output to charlie.out
    with open('charlie.out', 'w') as file:
        file.write(str(max_len) + '\n')

# Solve for p = 2
elif p == 2:
    # Helper function to get alphabetical value
    def f(char):
        return ord(char) - ord('a') + 1

    stack = []
    sum_cost = 0

    for char in string:
        # While we can eliminate a character according to the rules
        while len(stack) > 1 and stack[-1] < char and stack[-2] > stack[-1]:
            sum_cost += max(f(stack[-2]), f(char))
            stack.pop()  # Remove the middle character
        stack.append(char)  # Add the current character to the stack

    final_string = ''.join(stack)
    # Write output to charlie.out
    with open('charlie.out', 'w') as file:
        file.write(final_string + '\n')
        file.write(str(sum_cost) + '\n')
