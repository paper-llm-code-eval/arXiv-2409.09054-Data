#include <cstdio>
#include <vector>
#include <algorithm>

using namespace std;

struct task {
    int arrival;
    int duration;
    int id;
    int required_tap;
};

bool cmp_arrival(const task &a, const task &b) {
    return a.arrival < b.arrival;
}

int main() {
    freopen("elfi.in", "r", stdin);
    freopen("elfi.out", "w", stdout);

    int n;
    scanf("%d", &n);
    vector<task> tasks(n);
    for (int i = 0; i < n; i++) {
        scanf("%d %d", &tasks[i].arrival, &tasks[i].duration);
        tasks[i].arrival += tasks[i].duration;
        tasks[i].duration += 1;
        tasks[i].id = i + 1;
        tasks[i].required_tap = 1;
    }

    sort(tasks.begin(), tasks.end(), cmp_arrival);

    int max_required = 0;
    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            if (tasks[j].arrival >= tasks[i].arrival && tasks[j].arrival < tasks[i].arrival + tasks[i].duration) {
                tasks[j].required_tap = max(tasks[j].required_tap, tasks[i].required_tap + 1);
            } else if (tasks[j].arrival == tasks[i].arrival + tasks[i].duration) {
