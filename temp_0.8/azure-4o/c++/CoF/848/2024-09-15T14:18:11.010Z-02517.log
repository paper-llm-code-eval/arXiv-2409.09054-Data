#include <fstream>
#include <vector>
#include <unordered_set>

using namespace std;

enum Direction {
    RIGHT = 1,
    UP,
    LEFT,
    DOWN
};

// Function to traverse the board and return the score or detect infinite loop
int traverseBoard(vector<vector<int>>& board, int startRow, int startCol) {
    int N = board.size();
    int M = board[0].size();
    int row = startRow;
    int col = startCol;
    int steps = 0;
    unordered_set<int> visited;

    while (true) {
        int pos = row * M + col;
        if (visited.find(pos) != visited.end()) {
            return steps * 1000;
        }
        visited.insert(pos);
        ++steps;

        switch (board[row][col]) {
            case RIGHT: col++; break;
            case UP: row--; break;
            case LEFT: col--; break;
            case DOWN: row++; break;
        }

        // Check if out of bounds
        if (row < 0 || row >= N || col < 0 || col >= M) {
            return steps;
        }
    }
}

int main() {
    ifstream input("arrows.in");
    ofstream output("arrows.out");

    int requirement;
    input >> requirement;

    int N, M;
    input >> N >> M;

    vector<vector<int>> board(N, vector<int>(M));
    for (int i = 0; i < N; ++i) {
        for (int j = 0; j < M; ++j) {
            input >> board[i][j];
        }
    }

    if (requirement == 1) {
        int startRow, startCol;
        input >> startRow >> startCol;
        output << traverseBoard(board, startRow - 1, startCol - 1) << endl;
    } else if (requirement == 2) {
        int count = 0;
        for (int i = 0; i < N; ++i) {
            for (int j = 0; j < M; ++j) {
                if (traverseBoard(board, i, j) % 1000 == 0) {
                    ++count;
                }
            }
        }
        output << count << endl;
    } else if (requirement == 3) {
        int maxScore = 0;
        for (int i = 0; i < N; ++i) {
            for (int j = 0; j < M; ++j) {
                maxScore = max(maxScore, traverseBoard(board, i, j));
            }
        }
        output << maxScore << endl;
    }

    return 0;
}
```
