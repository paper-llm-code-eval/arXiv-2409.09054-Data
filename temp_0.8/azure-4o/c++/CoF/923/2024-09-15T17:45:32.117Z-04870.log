#include <fstream>
#include <vector>
#include <algorithm>
using namespace std;

bool isAdjacent(int x1, int y1, int x2, int y2) {
    return (x1 == x2 && abs(y1 - y2) == 1) || (y1 == y2 && abs(x1 - x2) == 1) ||
           (abs(x1 - x2) == 1 && abs(y1 - y2) == 1);
}

void findFulgere(const vector<vector<int>>& grid, int N, int M, int& F, int& H) {
    vector<vector<bool>> visited(N, vector<bool>(M, false));
    F = 0;
    H = 0;
    
    for (int i = 0; i < N; ++i) {
        for (int j = 0; j < M; ++j) {
            if (grid[i][j] == 1 && !visited[i][j]) {
                ++F;
                int height = 0;
                int x = i, y = j;
                while (true) {
                    visited[x][y] = true;
                    ++height;
                    bool found_next = false;
                    for (int dx = -1; dx <= 1; ++dx) {
                        for (int dy = -1; dy <= 1; ++dy) {
                            int nx = x + dx, ny = y + dy;
                            if (nx >= 0 && nx < N && ny >= 0 && ny < M && grid[nx][ny] == 1 && !visited[nx][ny]) {
                                if (isAdjacent(x, y, nx, ny)) {
                                    x = nx;
                                    y = ny;
                                    found_next = true;
                                    break;
                                }
                            }
                        }
                        if (found_next) break;
                    }
                    if (!found_next) break;
                }
                H = max(H, height);
            }
        }
    }
}

int main() {
    ifstream fin("foto.in");
    ofstream fout("foto.out");

    int C, N, M;
    fin >> C >> N >> M;
    
    vector<vector<int>> grid(N, vector<int>(M));
    for (int i = 0; i < N; ++i) {
        for (int j = 0; j < M; ++j) {
            fin >> grid[i][j];
        }
    }
    
    if (C == 1) {
        int maxBlack = 0;
        for (int i = 0; i < N; ++i) {
            int currentBlack = 0;
            for (int j = 0; j < M; ++j) {
                if (grid[i][j] == 0) {
                    ++currentBlack;
                } else {
                    maxBlack = max(maxBlack, currentBlack);
                    currentBlack = 0;
                }
            }
            maxBlack = max(maxBlack, currentBlack);
        }
        fout << maxBlack << endl;
    } else if (C == 2) {
        int F, H;
        findFulgere(grid, N, M, F, H);
        fout << F << " " << H << endl;
    }

    return 0;
}
```

### Explanation:
1. **Reading Input**: The program starts by reading the input from `foto.in`.
2. **Grid Initialization**: It initializes a 2D vector `grid` to store the photograph data.
3. **Processing for C=1**: If `C` is 1, it calculates the maximum number of contiguous black squares (`0`) in any row.
4. **Processing for C=2**: If `C` is 2, it uses a helper function `findFulgere` to count the number of distinct lightning (`1`) and find the maximum height of any lightning.
5. **Writing Output**: Finally, the results are written to `foto.out`.
