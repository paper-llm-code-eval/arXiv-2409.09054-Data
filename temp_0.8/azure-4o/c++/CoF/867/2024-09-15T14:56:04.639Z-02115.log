#include <iostream>
#include <fstream>
#include <vector>
#include <string>
#include <algorithm>

using namespace std;

// Function to check if a number is a palindrome
bool isPalindrome(const string &s) {
    int len = s.size();
    for (int i = 0; i < len / 2; ++i) {
        if (s[i] != s[len - i - 1]) {
            return false;
        }
    }
    return true;
}

// Function to check if a number is an almost palindrome
bool isAlmostPalindrome(const string &s) {
    int len = s.size();
    int count_diff = 0;
    for (int i = 0; i < len / 2; ++i) {
        if (s[i] != s[len - i - 1]) {
            ++count_diff;
            if (count_diff > 1) {
                return false;
            }
        }
    }
    return count_diff == 1;
}

// Function to find the smallest palindrome greater than a given number
string nextPalindrome(string s) {
    int len = s.size();
    string half = s.substr(0, (len + 1) / 2);
    string rev_half = half;
    reverse(rev_half.begin(), rev_half.end());
    
    string palindrome = half + rev_half.substr(len % 2);
    
    if (palindrome > s) {
        return palindrome;
    }

    for (int i = (len - 1) / 2; i >= 0; --i) {
        if (half[i] < '9') {
            ++half[i];
            break;
        } else {
            half[i] = '0';
        }
    }

    rev_half = half;
    reverse(rev_half.begin(), rev_half.end());
    return half + rev_half.substr(len % 2);
}

int main() {
    ifstream infile("palindrom.in");
    ofstream outfile("palindrom.out");

    int C, n;
    infile >> C >> n;
    vector<string> numbers(n);
    for (int i = 0; i < n; ++i) {
        infile >> numbers[i];
    }

    if (C == 1) {
        int count_palindrome = 0;
        for (const string &num : numbers) {
            if (isPalindrome(num)) {
                ++count_palindrome;
            }
        }
        outfile << count_palindrome << endl;
    } else if (C == 2) {
        int count_almost_palindrome = 0;
        for (const string &num : numbers) {
            if (isAlmostPalindrome(num)) {
                ++count_almost_palindrome;
            }
        }
        outfile << count_almost_palindrome << endl;
    } else if (C == 3) {
        for (const string &num : numbers) {
            outfile << nextPalindrome(num) << " ";
        }
        outfile << endl;
    }

    infile.close();
    outfile.close();
    return 0;
}
