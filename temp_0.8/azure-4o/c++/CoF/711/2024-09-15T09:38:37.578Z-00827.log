#include <fstream>
#include <sstream>
#include <vector>
#include <string>

void readInput(std::vector<std::string>& paragraphs, int& maxLen) {
    std::ifstream infile("text.in");
    std::string line;
    getline(infile, line);
    maxLen = std::stoi(line);

    std::string paragraph;
    while (getline(infile, line)) {
        if (line.empty()) {
            if (!paragraph.empty()) {
                paragraphs.push_back(paragraph);
                paragraph.clear();
            }
            paragraphs.push_back(""); // Push empty line to handle empty paragraphs
        } else {
            if (!paragraph.empty()) {
                paragraph += " ";
            }
            paragraph += line;
        }
    }
    if (!paragraph.empty()) {
        paragraphs.push_back(paragraph);
    }
    infile.close();
}

void justifyLine(const std::vector<std::string>& words, int maxLen, std::ofstream& outfile) {
    int totalLen = 0;
    for (const auto& word : words) {
        totalLen += word.size();
    }

    int numSpaces = maxLen - totalLen;
    int slots = words.size() - 1;
    std::vector<int> spaceDistribution(slots, numSpaces / slots);
    for (int i = 0; i < numSpaces % slots; ++i) {
        spaceDistribution[i]++;
    }

    for (size_t i = 0; i < words.size(); ++i) {
        outfile << words[i];
        if (i < spaceDistribution.size()) {
            outfile << std::string(spaceDistribution[i], ' ');
        }
    }
    outfile << '\n';
}

void processParagraph(const std::string& paragraph, int maxLen, std::ofstream& outfile) {
    std::istringstream iss(paragraph);
    std::vector<std::string> words;
    std::string word;
    while (iss >> word) {
        if (words.empty() || words.back().size() + word.size() + 1 <= maxLen) {
            if (!words.empty()) {
                words.back() += ' ';
            }
            words.back() += word;
        } else {
            std::vector<std::string> lineWords;
            std::istringstream lineStream(words.back());
            std::string lineWord;
            while (lineStream >> lineWord) {
                lineWords.push_back(lineWord);
            }
            justifyLine(lineWords, maxLen, outfile);
            words.clear();
            words.push_back(word);
        }
    }
    if (!words.empty()) {
        outfile << words.back() << '\n';
    }
}

int main() {
    std::vector<std::string> paragraphs;
    int maxLen;
    readInput(paragraphs, maxLen);

    std::ofstream outfile("text.out");
    for (const auto& paragraph : paragraphs) {
        if (paragraph.empty()) {
            outfile << '\n';
        } else {
            processParagraph(paragraph, maxLen, outfile);
        }
    }
    outfile.close();

    return 0;
}
```

This C++ code reads from `text.in` and writes to `text.out` using file I/O operations. It processes each paragraph by breaking it into lines of length `MAX` and ensures that the text is justified left and right as required.
