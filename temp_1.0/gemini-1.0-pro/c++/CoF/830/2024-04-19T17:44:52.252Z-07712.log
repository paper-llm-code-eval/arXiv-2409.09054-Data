#include <fstream>

using namespace std;

int main()
{
    ifstream fin("clepsidru.in");
    ofstream fout("clepsidru.out");

    int n, b, k;
    fin >> n >> b;

    fin >> k;
    for (int i = 1; i <= k; i++)
