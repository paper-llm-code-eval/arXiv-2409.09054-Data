#include <fstream>

using namespace std;

int n, b, k;
int p[1005], s[1005];
int sus[1005], jos[1005];

int main()
{
    ifstream fin("clepsidru.in");
    ofstream fout("clepsidru.out");

    fin >> n >> b;

    fin >> k;
    for (int i = 1; i <= k; i++)
        fin >> s[i] >> p[i];

    // primul experiment
    int rez = (b + n - 1) / n;
    fout << rez << '\n';

    // al doilea experiment
    int poz = 1;
    for (int i = 1; i <= k; i++)
    {
        int x = s[i] - (n - p[i] + poz - 1);
        sus[p[i]] += b / n;
        jos[p[i]] += (b % n + x) / n;
        b -= x + 1;
        poz = p[i];
    }

    for (int i = 1; i <= n; i++)
        fout << sus[i] + b / n << " " << jos[i] + (b % n) / n << '\n';

    fin.close();
    fout.close();
    return 0;
}
```
