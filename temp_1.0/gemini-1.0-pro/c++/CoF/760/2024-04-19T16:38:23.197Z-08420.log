#include <fstream>

using namespace std;

const int MAXN = 40;

int main() {
  ifstream fin("telecabina.in");
  ofstream fout("telecabina.out");

  int n, a[MAXN], b[MAXN], oameni = 0, cons = 0, spec = 0, i;
  bool directie = true; // urcare

  fin >> n;
  for (i = 0; i < n; i++) {
    fin >> a[i] >> b[i];
    oameni += b[i];
  }

  for (i = 1; i < n; i++) {
    if (directie) {
      cons += 3 * (a[i] - a[i - 1]);
    } else {
      cons += (a[i - 1] - a[i]);
    }

    if (a[i] < a[i - 1]) {
      if (directie) {
        spec++;
        directie = false;
      }
    } else {
      if (!directie) {
        spec++;
        directie = true;
      }
    }
  }

  fout << oameni << '\n' << cons << '\n' << spec << '\n';

  fin.close();
  fout.close();

  return 0;
}
```
