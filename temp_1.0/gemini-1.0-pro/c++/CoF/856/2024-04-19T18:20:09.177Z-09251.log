#include <iostream>
#include <fstream>

using namespace std;

int main() {
    ifstream in("covor.in");
    ofstream out("covor.out");
    int n, k, t;
    in >> n >> k >> t;
    if (t == 1) {
        out << (n + 1) / 2 << "\n";
    } else {
        int sum = 0, ind = 0;
        for (int i = 1; sum + i < k; i++) {
            sum += i;
            ind++;
        }
        out << ind + 1 << "\n";
    }
    return 0;
}
```
