#include <bits/stdc++.h>

using namespace std;

ifstream f("ech.in");
ofstream g("ech.out");

int n, sum;

int main() {
    f >> n;
    n++;
    bool flag = false;
    while (!flag) {
        stringstream ss;
        ss << n;
        string s = ss.str();
        int sum_even = 0;
        int sum_odd = 0;
        for (int i = 0; i < s.size(); i++) {
            int d = s[i] - '0';
            if (i % 2 == 0)
                sum_even += d;
            else
                sum_odd += d;
        }
        if (sum_even == sum_odd) {
            flag = true;
            g << s;
        }
        n++;
    }
    return 0;
}
```
